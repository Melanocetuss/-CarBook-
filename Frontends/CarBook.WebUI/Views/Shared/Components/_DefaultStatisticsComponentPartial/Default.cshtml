<section class="ftco-counter ftco-section img bg-light" id="section-counter">
    <div class="overlay"></div>
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-lg-3 justify-content-center counter-wrap ftco-animate">
                <div class="block-18">
                    <div class="text text-border d-flex align-items-center">
                        <strong class="number" data-number="@ViewBag.carCount">0</strong>
                        <span>Toplam <br>Araç</span>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-lg-3 justify-content-center counter-wrap ftco-animate">
                <div class="block-18">
                    <div class="text text-border d-flex align-items-center">
                        <strong class="number" data-number="@String.Format("{0:F0}", ViewBag.avgRentPriceForDaileyCount)">312</strong>
                        <span>Ortalama Günlük <br>Araç Fiyatı</span>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-lg-3 justify-content-center counter-wrap ftco-animate">
                <div class="block-18">
                    <div class="text text-border d-flex align-items-center">
                        <strong class="number" data-number="@String.Format("{0:F0}", ViewBag.avgRentPriceForWeeklyCount)">1400</strong>
                        <span>Ortalama Haftalık <br>Araç Fiyatı</span>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-lg-3 justify-content-center counter-wrap ftco-animate">
                <div class="block-18">
                    <div class="text d-flex align-items-center">
                        <strong class="number" data-number="@ViewBag.blogCount">0</strong>
                        <span>Toplam <br>Blog Sayısı</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
