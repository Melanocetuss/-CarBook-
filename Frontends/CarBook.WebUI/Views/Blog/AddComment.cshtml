<div class="comment-form-wrap pt-5">
    <h3 class="mb-5">Yorum Yaz </h3>
    <form method="post" asp-action="AddComment" asp-controller="Blog" class="p-5 bg-light">           
        <input type="hidden" value="@ViewBag.blogid" class="form-control" id="email" Name="BlogID">
        <div class="form-group">
            <label for="name">Ad Soyad *</label>
            <input type="text" class="form-control" id="name" Name="Name">
        </div>
        <div class="form-group">
            <label for="email">Email Adresi *</label>
            <input type="email" class="form-control" id="email" Name="Email">
        </div>
        <div class="form-group">
            <label for="message">Yorumunuz</label>
            <textarea cols="30" rows="10" class="form-control" id="message" Name="Description"></textarea>
        </div>
        <div class="form-group">
            <input type="submit" value="Yorumu Yap" class="btn py-3 px-4 btn-primary">
        </div>
    </form>
</div>
